@import "fonts.styl"

azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A
naranja = #FF7F00
verde =#54B551 
blanco= #FFF
negro =#222
azul_oscuro = #068CE3
gris =#EEE

a 
	color naranja
body
	background: #333
footer
	position relative
	top 50px
	color blanco
	.rackcode
		height 100%
		width: 100%
		img, span
			display inline-block
			vertical-align middle
		img 
			height 100px
			width: 100px
		span
			height 100%
			text-shadow: 1px 2px 1px negro
			color blanco
.tag 
	background azul_oscuro
	padding: 0 1em
	border-radius 5%
	a 
		text-decoration none
		color blanco
		
		
.titulo 
	font-size: 1.3em
	font-weight bold
	text-shadow: 1px 2px 1px negro
.subtitulo
	font-size: 1.1em
	font-weight normal
	text-shadow: 1px 2px 1px negro
.texto-normal
	font-size: 1em 
	font-weight normal
	font-style: italic

#contactanos
	padding 2em 0
	position relative
	top 50px
	background: azul_oscuro
	display block
	text-align center
	color blanco
	h3
		margin: 0
		font-size: 2em
	input 
		box-shadow: 2px 1px 1px #333
		padding 1em
		width: 50%
		&:focus
			border 4px solid verde
	button
		box-shadow: 2px 1px 1px #333
		padding: 1em 2em
		background: blanco
		border none
		border-radius 4%
		color azul_oscuro
		&:hover
			color azul_oscuro
			background: blanco
			border 1px solid blanco
#cursos
	position relative
	top 50px
	background: #333
	color blanco
	display block
	text-align center
	#title-cursos
		font-size: 2em
		margin: 0
		text-align center
		padding: 1em 0
	.curso 
		text-align center
		position: relative
		display inline-block
		padding: 1em 0
		width: 80%
		.curso-img
			position relative
			margin: 0
			height 100%
			width: 100%
			img 
				height 100%
				width: 100%
		.curso-info
			position relative
			right 0
			top 0
			width: 100%
			h5
				text-align center
				margin: 0
				display block
				.autor
					display block
					margin: 0 1em
					text-align center
				.duracion
					display block
					margin: 0 1em
				.comentarios
					display block
					margin: 0 1em
					
					
			h4
				font-size: 1.4em
				margin: 0
			p 
				text-align left
			.tags
				display block
				padding: 1em 0
			

#header
	background: #333
	//background: url('../imagenes/Frontend.jpg') 
	//background-repeat: no-repeat;
	//background-position: center;
	//background-size: cover;
	padding: 5em 0 
	text-align center
	color blanco
	position relative
	top 50px
	.fondo 
		opacity 0.8
		position absolute
		top 0
		height 100%
		width: 100%
		img 
			opacity 0.8
			height 100%
			display block
			width: 100%
	figure
		position relative
		height: 200px
		margin: 0
		img 
			height 200px
			width: 200px
	h1, h2
		text-shadow: 1px 2px 1px negro
		position relative
		margin:  0
	h2 
		margin: 1em auto
		font-weight normal
	.comenzar
		background rgba(0, 0, 0, .7)
		color blanco
		position relative
		h3
		h4
			padding: 0.2em 0
			margin: 0
			display block
		a 
			display block
			margin: 0 30%
			padding: 1em 0
			text-decoration none
			background: azul_oscuro
			color blanco
			&:hover
				background: naranja
				color blanco
		.tags
			padding: 1em 0
			display block
			ul 
				display block
				padding: 0
				margin: 0
				.tag-1
					border-left 1px solid blanco
				li 
					list-style: none
					display inline-block
					border 1px solid blanco
					border-left 1px solid blanco
					a 
						background: transparent
						padding: 1em
						margin: 0
						display inline-block
						&:hover
							background: blanco
							color azul
						
	.intro
		position relative
		text-align center
		display block
		background rgba(0, 0, 0, .3)
		span 
			display block
			font-size: 2.5em
			color blanco
		h3
			margin: 0
			display block
			a 
				text-decoration none
				
		
	
	
.links
	background rgba(0, 0, 0, .2)
	position fixed
	top 0
	right 0
	z-index: 2
	left: 0
	a
		text-shadow: 1px 2px 1px negro
		text-decoration: none
		text-align: center
		height: 100%
		color blanco
		float right
		display inline-block
		box-sizing border-box
		padding: 1em
		vertical-aling top
		&:hover
			background azul_oscuro
	.enlace a 
		margin 40% auto	
		width: 70%
	.logo
		float left
		&:hover
			background transparent
	.login
		background: naranja
		opacity 1
		
.clearfix
	clear both