				height: 100%
				width: 100%
				img
					height 100%
					width: 100%
			.footer-curso
				background rgba(0, 0, 0, .75)
				position absolute
				bottom: 0
				display block
				width: 100%
				p
					text-align left
					a 
						text-align left
						font-size: 1.2em
						text-decoration none
						color blanco
						text-shadow 1px 2px 1px negro
				.destacado
					margin 0
					height 100%
