.clearfix
	clear both
body
	background #333
	color blanco

header
	top 50px
	position relative
	text-align: center
	display block
	background: #333
	padding 5em 0
	.fondo 
		opacity 0.3
		position absolute
		top 0
		height 100%
		width: 100%
		img 
			opacity 0.8
			height 100%
			display block
			width: 100%
	h1 
		margin: 0
		font-size: 1.7em
		color blanco
		text-shadow: 1px 1px 1px black
	h3 
		padding 1em 0
		margin: 0 25%
		font-size: 1.2em
		color blanco
		text-shadow: 1px 1px 1px black
	figure
		margin 0
		height: 100%
		width: 100%
		img
			height 180px
			width: 180px
			
.principal-cursos
	top 50px
	background #EEE
	position relative
	h2,h4
		margin 0
	.principal-left
		position absolute
		background #EEE
		width: 20%
		height 100%
		top 50px
		.titulo
			text-align center
		.recomendaciones
			position relative
			display block
			background naranja
			text-align left
			padding 0.5em 0
			margin 0.5em 0
			&:hover
				background azul_oscuro
			.recomendacion-right
				position relative
				top 0
				display block
				h2 
					font-size: 1.2em
					a 
						text-decoration none
						color blanco	
	.principal-right
		position absolute
		text-align center
		background #EEE
		width: 80%
		left 20%
